<div id="wrap">
	<div class="module">
		<h4>View Reservations {{#day}}for {{day}}{{/day}}</h4>
		<div class="color-guide">
			<span class="past">past</span>
			<span class="current">current</span>
			<span class="future">future</span>
			<span class="cancelled">cancelled</span>
		</div>
		{{#reservations_exist}}
		<table class="reservations">
			<tr>
				<th>Starts</th>
				<th>Ends</th>
				<th>Duration</th>
				<th>Recurs</th>
				<th>&mdash;</th>
			</tr>
			{{#reservations}}
			<tr class="reservation {{class}}">
				<td>{{start_time}}</td>
				<td>{{end_time}}</td>
				<td>{{duration}}</td>
				<td>
					<strong>
					{{#recurring}}Y{{/recurring}}
					{{^recurring}}N{{/recurring}}
					</strong>
				</td>
				<td>
					{{#active}}<a href="{{edit_url}}">edit</a>{{/active}}
					{{^active}}&mdash{{/active}}
				</td>
			</tr>
			{{/reservations}}
		</table>
		{{/reservations_exist}}
		{{^reservations_exist}}<em>You don't have any reservations to show.</em>{{/reservations_exist}}
		<a href="reservation/create" class="more">Add Reservation</a>
	</div>
</div>